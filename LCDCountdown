{
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("Alarm will be");
  lcd.setCursor(0,1);
  lcd.print("activated in");
  
  int cntdwn=9;                //Alarm is activated after 9 seconds Countdown
  while(cntdwn!=0)
  {
    lcd.setCursor(13,1);
    lcd.print(cntdwn);
    cntdwn--;
    tone(buzzer, 700, 100);
    delay(1000);  

